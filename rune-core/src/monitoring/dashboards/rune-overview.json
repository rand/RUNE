{
  "dashboard": {
    "id": null,
    "uid": "rune-overview",
    "title": "RUNE Authorization Engine Overview",
    "tags": ["rune", "authorization", "performance"],
    "timezone": "browser",
    "schemaVersion": 30,
    "version": 1,
    "refresh": "10s",
    "panels": [
      {
        "id": 1,
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0},
        "type": "stat",
        "title": "Uptime",
        "targets": [
          {
            "expr": "rune_up",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0},
        "type": "stat",
        "title": "Requests per Second",
        "targets": [
          {
            "expr": "rate(rune_authorization_requests_total[1m])",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "red", "value": null},
                {"color": "yellow", "value": 100},
                {"color": "green", "value": 1000}
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0},
        "type": "stat",
        "title": "Authorization Success Rate",
        "targets": [
          {
            "expr": "rune_authorization_success_rate",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "red", "value": null},
                {"color": "yellow", "value": 80},
                {"color": "green", "value": 95}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 0},
        "type": "stat",
        "title": "P99 Latency",
        "targets": [
          {
            "expr": "histogram_quantile(0.99, sum(rate(rune_authorization_latency_bucket[5m])) by (le))",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ms",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 1},
                {"color": "red", "value": 10}
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
        "type": "graph",
        "title": "Authorization Latency",
        "targets": [
          {
            "expr": "histogram_quantile(0.5, sum(rate(rune_authorization_latency_bucket[5m])) by (le))",
            "legendFormat": "P50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, sum(rate(rune_authorization_latency_bucket[5m])) by (le))",
            "legendFormat": "P95",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, sum(rate(rune_authorization_latency_bucket[5m])) by (le))",
            "legendFormat": "P99",
            "refId": "C"
          },
          {
            "expr": "histogram_quantile(0.999, sum(rate(rune_authorization_latency_bucket[5m])) by (le))",
            "legendFormat": "P99.9",
            "refId": "D"
          }
        ],
        "yaxes": [
          {
            "format": "s",
            "label": "Latency"
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 6,
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4},
        "type": "graph",
        "title": "Request Rate",
        "targets": [
          {
            "expr": "rate(rune_authorization_requests_total[1m])",
            "legendFormat": "Total",
            "refId": "A"
          },
          {
            "expr": "rate(rune_authorization_decisions{result=\"allow\"}[1m])",
            "legendFormat": "Allowed",
            "refId": "B"
          },
          {
            "expr": "rate(rune_authorization_decisions{result=\"deny\"}[1m])",
            "legendFormat": "Denied",
            "refId": "C"
          }
        ],
        "yaxes": [
          {
            "format": "reqps",
            "label": "Requests/sec"
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 7,
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12},
        "type": "graph",
        "title": "Datalog vs Cedar Latency",
        "targets": [
          {
            "expr": "histogram_quantile(0.99, sum(rate(rune_datalog_evaluation_latency_bucket[5m])) by (le))",
            "legendFormat": "Datalog P99",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.99, sum(rate(rune_policy_evaluation_latency_bucket[5m])) by (le))",
            "legendFormat": "Cedar P99",
            "refId": "B"
          }
        ],
        "yaxes": [
          {
            "format": "s",
            "label": "Latency"
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 8,
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12},
        "type": "graph",
        "title": "System Resources",
        "targets": [
          {
            "expr": "rune_fact_store_size",
            "legendFormat": "Fact Store Size",
            "refId": "A",
            "yaxis": 2
          },
          {
            "expr": "rune_memory_usage / 1024 / 1024",
            "legendFormat": "Memory (MB)",
            "refId": "B"
          },
          {
            "expr": "rune_policy_count",
            "legendFormat": "Policy Count",
            "refId": "C",
            "yaxis": 2
          }
        ],
        "yaxes": [
          {
            "format": "decmbytes",
            "label": "Memory"
          },
          {
            "format": "short",
            "label": "Count"
          }
        ]
      },
      {
        "id": 9,
        "gridPos": {"h": 6, "w": 8, "x": 0, "y": 20},
        "type": "graph",
        "title": "Cache Performance",
        "targets": [
          {
            "expr": "rune_cache_hit_rate",
            "legendFormat": "{{cache}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "percent",
            "label": "Hit Rate",
            "max": 100,
            "min": 0
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 10,
        "gridPos": {"h": 6, "w": 8, "x": 8, "y": 20},
        "type": "graph",
        "title": "Error Rate",
        "targets": [
          {
            "expr": "rate(rune_errors_total[5m])",
            "legendFormat": "{{type}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "errors/sec",
            "label": "Errors/sec"
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 11,
        "gridPos": {"h": 6, "w": 8, "x": 16, "y": 20},
        "type": "graph",
        "title": "Hot Reloads",
        "targets": [
          {
            "expr": "rate(rune_hot_reloads[5m])",
            "legendFormat": "Reloads",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.99, sum(rate(rune_hot_reload_duration_bucket[5m])) by (le))",
            "legendFormat": "P99 Duration",
            "refId": "B",
            "yaxis": 2
          }
        ],
        "yaxes": [
          {
            "format": "short",
            "label": "Reloads/sec"
          },
          {
            "format": "s",
            "label": "Duration"
          }
        ]
      }
    ]
  }
}